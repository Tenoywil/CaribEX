# =====================================
# CaribEX Production Environment Variables
# =====================================
# Copy this file to .env.production and fill in the values
# IMPORTANT: Never commit .env.production to version control

# =====================================
# Backend API Configuration
# =====================================
# The base URL for your production backend API
# This should be your deployed backend API domain
NEXT_PUBLIC_API_URL=https://api.caribex.com

# =====================================
# Blockchain Configuration
# =====================================
# Chain ID: 1 = Ethereum Mainnet, 137 = Polygon, 56 = BSC
NEXT_PUBLIC_CHAIN_ID=1

# Network name for display
NEXT_PUBLIC_NETWORK_NAME=mainnet

# RPC URL for blockchain connection (use your own provider for production)
# Get from: Alchemy, Infura, QuickNode, etc.
NEXT_PUBLIC_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# =====================================
# Feature Flags
# =====================================
# Enable/disable major features
NEXT_PUBLIC_ENABLE_WALLET=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_SELLER_FEATURES=true

# =====================================
# CDN Configuration (Optional)
# =====================================
# CDN URL for serving static assets and uploaded images
# Leave empty to use default API endpoint for image serving
NEXT_PUBLIC_CDN_URL=https://cdn.caribex.com

# =====================================
# Analytics (Optional but Recommended)
# =====================================
# Google Analytics 4 Measurement ID
# Get from: https://analytics.google.com
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# Google Tag Manager ID (if using GTM)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =====================================
# Error Tracking (Highly Recommended)
# =====================================
# Sentry DSN for error tracking and monitoring
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@o0000.ingest.sentry.io/0000000

# Sentry Environment
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Sentry Release (auto-set via CI/CD usually)
NEXT_PUBLIC_SENTRY_RELEASE=

# =====================================
# Performance Monitoring (Optional)
# =====================================
# LogRocket App ID for session replay and debugging
# Get from: https://logrocket.com
NEXT_PUBLIC_LOGROCKET_ID=

# =====================================
# Social & Communication (Optional)
# =====================================
# For social sharing and metadata
NEXT_PUBLIC_SITE_URL=https://caribex.com
NEXT_PUBLIC_SITE_NAME=CaribEX
NEXT_PUBLIC_SITE_DESCRIPTION=Fast, secure blockchain money transfers and marketplace connecting Jamaica & the Caribbean

# Social media links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/caribex
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/caribex
NEXT_PUBLIC_TELEGRAM_URL=https://t.me/caribex

# =====================================
# API Rate Limiting (Frontend Display)
# =====================================
# Display rate limit information to users
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_LIMIT_WINDOW=60

# =====================================
# File Upload Configuration
# =====================================
# Maximum file size for image uploads (in bytes)
# Default: 5MB = 5 * 1024 * 1024 = 5242880
NEXT_PUBLIC_MAX_FILE_SIZE=5242880

# Allowed image types (comma-separated)
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Maximum number of images per product
NEXT_PUBLIC_MAX_IMAGES_PER_PRODUCT=10

# =====================================
# Pagination & Data Limits
# =====================================
# Default number of products per page in marketplace
NEXT_PUBLIC_PRODUCTS_PER_PAGE=20

# Maximum number of items in cart
NEXT_PUBLIC_MAX_CART_ITEMS=50

# =====================================
# Feature Timeouts (milliseconds)
# =====================================
# API request timeout
NEXT_PUBLIC_API_TIMEOUT=30000

# File upload timeout
NEXT_PUBLIC_UPLOAD_TIMEOUT=60000

# =====================================
# Cache Configuration
# =====================================
# Cache TTL in seconds
NEXT_PUBLIC_CACHE_TTL=300

# Enable client-side caching
NEXT_PUBLIC_ENABLE_CACHE=true

# =====================================
# Build Configuration
# =====================================
# Used during build process
NODE_ENV=production

# =====================================
# Security Headers (Configure in hosting platform)
# =====================================
# These should be set in Vercel/Netlify/your hosting platform:
# - X-Frame-Options: DENY
# - X-Content-Type-Options: nosniff
# - Referrer-Policy: strict-origin-when-cross-origin
# - Permissions-Policy: camera=(), microphone=(), geolocation=()

# =====================================
# CORS Configuration (Backend)
# =====================================
# Your backend should allow CORS from these origins:
# - https://caribex.com
# - https://www.caribex.com
# Add any other domains you need

# =====================================
# Notes
# =====================================
# 1. All NEXT_PUBLIC_* variables are exposed to the browser
# 2. Never put sensitive API keys in NEXT_PUBLIC_* variables
# 3. Backend API keys should only be in backend environment
# 4. Always use HTTPS in production URLs
# 5. Test all features after setting environment variables
# 6. Monitor error rates after deployment
